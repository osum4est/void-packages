openrazer-daemon_package() {
	depends="openrazer-driver-dkms"
	pkg_install() {
		vmove usr/bin
		vmove $py3_sitelib/openrazer_daemon
	}
}
openrazer-driver-dkms_package() {
	pkg_install() {
		vmove lib/udev
		vmove usr/src
	}
}
python-openrazer_package() {
	depends="python3 openrazer-daemon"
	pkg_install() {
		vmove $py3_sitelib/openrazer
	}
}
